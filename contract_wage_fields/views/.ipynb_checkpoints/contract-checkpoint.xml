<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="contract_wage_fields_contract_changes" model="ir.ui.view" >
        <field name="name">contract_wage_fields.contract.changes</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="salary_and_advantages"]' position='inside'>
                <field name="insurance_wage"/>
                <field name="employee_percent"/>
                <field name="company_percent"/>
                <field name="employee_insurance_amount"/>
                <field name="company_insurance_amount"/>
                <field name="profit_tax_percent"/>
                <field name="profit_tax_amount"/>
                <field name="trans_allowance"/>
            </xpath>
        </field>
    </record>

    </data>
</odoo>